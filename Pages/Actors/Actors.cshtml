@page
@model Movies.Pages.Admin.ActorsModel
@{
    ViewData["Title"] = "Actors";
}

<div class="container mt-4">
    <h2>Actors</h2>

    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Birth Date</th>
                <th>Movies</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model.Actors)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(actor.ImagePath))
                        {
                            <img src="@actor.ImagePath" alt="@actor.Name" style="width: 60px; height: auto; border-radius: 5px;" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </td>
                    <td>@actor.Name</td>
                    <td>@actor.BirthDate?.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (actor.MovieActors != null && actor.MovieActors.Any())
                        {
                            @string.Join(", ", actor.MovieActors.Select(ma => ma.Movie.Title))
                        }
                        else
                        {
                            <span class="text-muted">No movies</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
