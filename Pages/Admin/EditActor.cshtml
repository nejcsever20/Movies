@page "{id:int}"
@model Movies.Pages.Admin.EditActorModel
@{
    ViewData["Title"] = "Edit Actor";
}

<div class="container mt-4">
    <h2>Edit Actor</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Actor.Name" class="form-label"></label>
            <input asp-for="Actor.Name" class="form-control" />
            <span asp-validation-for="Actor.Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Admin/Actors" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
