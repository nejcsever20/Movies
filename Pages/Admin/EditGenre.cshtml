@page "{id:int}"
@model Movies.Pages.Admin.EditGenreModel
@{
    ViewData["Title"] = "Edit Genre";
}

<div class="container mt-4">
    <h2>Edit Genre</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Genre.Name" class="form-label"></label>
            <input asp-for="Genre.Name" class="form-control" />
            <span asp-validation-for="Genre.Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Admin/Genres" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
