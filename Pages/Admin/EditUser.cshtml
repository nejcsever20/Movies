@page "{id}"
@model Movies.Pages.Admin.EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <h2>Edit User</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="User.UserName" class="form-label">Username</label>
            <input asp-for="User.UserName" class="form-control" />
            <span asp-validation-for="User.UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="User.Email" class="form-label">Email</label>
            <input asp-for="User.Email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/Admin/Users" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
