@page
@model Movies.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row g-4">
        <!-- Movies -->
        <div class="col-md-4">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h4 class="card-title mb-3">Movies</h4>
                    <p class="card-text">View, edit, and delete movies from the database.</p>
                    <a asp-page="/Admin/Movies" class="btn btn-primary mt-auto">Manage Movies</a>
                </div>
            </div>
        </div>

        <!-- Actors -->
        <div class="col-md-4">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h4 class="card-title mb-3">Actors</h4>
                    <p class="card-text">View, edit, and delete actors from the database.</p>
                    <a asp-page="/Admin/Actors" class="btn btn-primary mt-auto">Manage Actors</a>
                </div>
            </div>
        </div>

        <!-- Directors -->
        <div class="col-md-4">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h4 class="card-title mb-3">Directors</h4>
                    <p class="card-text">View, edit, and delete directors from the database.</p>
                    <a asp-page="/Admin/Directors" class="btn btn-primary mt-auto">Manage Directors</a>
                </div>
            </div>
        </div>

        <!-- Genres -->
        <div class="col-md-6">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h4 class="card-title mb-3">Genres</h4>
                    <p class="card-text">View, edit, and delete genres from the database.</p>
                    <a asp-page="/Admin/Genre" class="btn btn-primary mt-auto">Manage Genres</a>
                </div>
            </div>
        </div>

        <!-- Users -->
        <div class="col-md-6">
            <div class="card shadow-sm text-center h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h4 class="card-title mb-3">Users</h4>
                    <p class="card-text">View, edit, and delete registered users.</p>
                    <a asp-page="/Admin/Users" class="btn btn-primary mt-auto">Manage Users</a>
                </div>
            </div>
        </div>
    </div>
</div>
