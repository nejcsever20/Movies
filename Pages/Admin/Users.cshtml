@page
@model Movies.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2>Manage Users</h2>

    @if (!Model.Users.Any())
    {
        <div class="alert alert-info">No users found.</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>
                            <a asp-page="/Admin/EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                            <form method="post" asp-page-handler="DeleteUser" class="d-inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this user?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
