@page
@model Movies.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2>Manage Users</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Users.Any())
    {
        <div class="alert alert-info">No users found.</div>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Current Roles</th>
                    <th>Assign New Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    var roles = Model.UserRoles.ContainsKey(user.Id)
                    ? string.Join(", ", Model.UserRoles[user.Id])
                    : "None";

                    <tr>
                        <td>@user.Email</td>
                        <td>@roles</td>
                        <td>
                            <form method="post" asp-page-handler="AssignRole" class="d-flex align-items-center gap-2">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <select name="roleName" class="form-select form-select-sm w-auto" required>
                                    <option value="">Select Role</option>
                                    @foreach (var role in Model.AllRoles)
                                    {
                                        <option value="@role">@role</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-primary">Assign</button>
                            </form>
                        </td>
                        <td>
                            <a asp-page="/Admin/EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                            <form method="post" asp-page-handler="DeleteUser" class="d-inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this user?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
