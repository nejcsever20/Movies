@page
@model Movies.Pages.Movie.GenresModel
@{
    ViewData["Title"] = "Genres";
}

<div class="container mt-4">
    <h2>Genres</h2>

    @if (Model.IsAdmin)
    {
        <div class="mb-3">
            <a asp-page="/Admin/CreateGenre" class="btn btn-success">Create Genre</a>
        </div>
    }

    @if (!Model.Genres.Any())
    {
        <div class="alert alert-info">No genres found.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            @foreach (var genre in Model.Genres)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@genre.Name</h5>

                            @if (genre.MovieGenres.Any())
                            {
                                <p class="card-text mb-0"><strong>Movies:</strong></p>
                                <ul class="list-unstyled ms-3">
                                    @foreach (var mg in genre.MovieGenres)
                                    {
                                        <li>
                                            <a asp-page="/Admin/DetailsMovie" asp-route-id="@mg.Movie.MovieId" class="text-decoration-none">
                                                @mg.Movie.Title
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="card-text text-muted mt-auto">No movies in this genre.</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
