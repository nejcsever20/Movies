@page
@model Movies.Pages.Watchlist.RecommendationsModel
@{
    ViewData["Title"] = "Recommended Movies";
}

<div class="container mt-4">
    <h2>Recommended Movies</h2>

    @if (!Model.Recommendations.Any())
    {
        <div class="alert alert-info">
            No recommendations available. Add some movies to your watchlist to get personalized suggestions!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            @foreach (var movie in Model.Recommendations)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <a asp-page="/Movie/Details" asp-route-id="@movie.MovieId">
                            <img src="@(string.IsNullOrEmpty(movie.ImagePath) ? "/images/movies/default.jpg" : movie.ImagePath)"
                                 class="card-img-top"
                                 style="height: 250px; object-fit: cover;" />
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center">@movie.Title</h5>

                            @if (!string.IsNullOrEmpty(movie.Description))
                            {
                                <p class="card-text text-muted">@movie.Description</p>
                            }

                            <div class="mt-auto d-flex justify-content-center">
                                <a asp-page="/Movie/Details" asp-route-id="@movie.MovieId" class="btn btn-primary btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
